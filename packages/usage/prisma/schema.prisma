generator client {
  provider = "prisma-client-js"
}

generator next_crud_generator {
  provider = "npx prisma-next-crud-generator"
  output   = "../src"
  config   = "./config/next_crud_generator"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id       String    @id @default(cuid())
  name     String
  profile  Profile?
  posts    Post[]
  projects Project[]
}

// one-to-one relation
model Profile {
  id     Int    @id @default(autoincrement())
  user   User   @relation(fields: [userId], references: [id])
  userId String @unique
}

// one-to-many relation
model Post {
  id      String @id @default(cuid())
  content String
  user    User   @relation(fields: [userId], references: [id])
  userId  String
}

// many-to-many relation
model Project {
  id    String @id @default(cuid())
  name  String
  users User[]
}
