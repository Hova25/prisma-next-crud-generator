generator client {
  provider = "prisma-client-js"
}

generator next_crud_generator {
  provider = "npx next-crud-generator"
  output   = "../src"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        String   @id @default(cuid())
  name      String
  email     String   @unique
  birthDate DateTime
}

model Project {
  id          String  @id @default(cuid())
  title       String
  description String
  published   Boolean @default(false)
}
